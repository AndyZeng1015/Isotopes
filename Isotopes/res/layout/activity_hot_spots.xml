<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3cbe68"
        android:elevation="3dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点搜索"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="22sp"/>
        
        <ImageView 
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/back"/>
        
    </RelativeLayout>
    
    <include layout="@layout/item_search" android:id="@+id/layout_search"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:text="热门景点"
        android:gravity="center"
        android:drawableLeft="@drawable/hot"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            
            <LinearLayout 
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
                
                <ImageView 
                    android:id="@+id/iv_beijing"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/beijing"/>
                
                <ImageView 
                    android:id="@+id/iv_shanghai"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/shanghai"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
                
                <ImageView 
                    android:id="@+id/iv_chengdu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/chengdu"/>
                
                <ImageView 
                    android:id="@+id/iv_guangzhou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/guangzhou"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
                
                <ImageView 
                    android:id="@+id/iv_shenzheng"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/shenzheng"/>
                
                <ImageView 
                    android:id="@+id/iv_tianjing"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/tianjing"/>
                
            </LinearLayout>
            
        </LinearLayout>
        
        
        
    </RelativeLayout>

</LinearLayout>
